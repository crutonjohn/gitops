---
apiVersion: volsync.backube/v1alpha1
kind: ReplicationDestination
metadata:
  name: {{ ENV.APP }}-{{ ENV.DESTPVC }}-manual
  namespace: {{ ENV.NS }}
spec:
  trigger:
    manual: "restore-once"
  restic:
    repository: {{ ENV.SRCPVC }}-{{ ENV.LOCATION }}-restic
    destinationPVC: {{ ENV.DESTPVC }}
    copyMethod: Direct
    #storageClassName: {{ ENV.STORAGE_CLASS_NAME }}
    #accessModes: {{ ENV.ACCESS_MODES }}
    previous: {{ ENV.PREVIOUS }}
    moverSecurityContext:
      runAsUser: {{ ENV.PUID }}
      runAsGroup: {{ ENV.PGID }}
      fsGroup: {{ ENV.PGID }}
    enableFileDeletion: true
    cleanupCachePVC: true
    cleanupTempPVC: true
    {% if ENV.LOCATION == "local" %}
    customCA:
      key: ca.crt
      secretName: heyjohn-internal-ca
    {% else %}
    {% endif %}
    cacheAccessModes:
      - ReadWriteOnce
    cacheStorageClassName: terra-block
